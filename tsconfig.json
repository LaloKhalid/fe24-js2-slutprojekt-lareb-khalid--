{
  "compilerOptions": {
    "target": "es6",                             
    "module": "ES6",                              
    "moduleResolution": "node",                    
    "esModuleInterop": true,                      
    "forceConsistentCasingInFileNames": true,     
    "strict": true,                              
    "skipLibCheck": true,                         
    "outDir": "./dist",                           /* Output directory for compiled JS files */
    "rootDir": "./"                               /* Root directory for TypeScript source files */
  },
  "include": [
    "index.ts",                                  /* Include your main entry file */
    "firebase.ts"                                 /* Include your Firebase configuration file */
  ]
}
